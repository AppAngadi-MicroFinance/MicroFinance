<Window x:Class="MicroFinance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicroFinance"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1366" Background="Brown">
    <Grid Height="768" Width="1366">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="38"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="Black"></Border>
        <Border Grid.Row="1" Background="AliceBlue">
            <Menu VerticalAlignment="Center">
                <MenuItem  Header="Create Branch" FontSize="20" Name="CrBranch" Click="CrBranch_Click">
                </MenuItem>
                <MenuItem Header="Add Employee" FontSize="20" x:Name="CreEmployee" Click="CreEmployee_Click"></MenuItem>
            </Menu>
            
        </Border>
        <Frame Grid.Row="2" x:Name="mainframe" NavigationUIVisibility="Hidden"></Frame>
        <Border Grid.Row="3" Background="AliceBlue"></Border>
        
    </Grid>
</Window>
